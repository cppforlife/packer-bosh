{
  "builders": [{
    "type": "virtualbox-iso",

    "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04-server-amd64.iso",
    "iso_checksum": "4d94f6111b8fe47da94396180ce499d8c0bb44f3",
    "iso_checksum_type": "sha1",

    "guest_os_type": "Ubuntu_64",
    "guest_additions_path": "/tmp/VBoxGuestAdditions.iso",
    "virtualbox_version_file": ".vbox_version",

    "boot_wait": "10s",
    "boot_command": [
      "<esc><wait>",
      "<esc><wait>",
      "<enter><wait>",
      "/install/vmlinuz<wait>",
      " auto<wait>",
      " console-setup/ask_detect=false<wait>",
      " console-setup/layoutcode=us<wait>",
      " console-setup/modelcode=pc105<wait>",
      " debconf/frontend=noninteractive<wait>",
      " debian-installer=en_US<wait>",
      " fb=false<wait>",
      " initrd=/install/initrd.gz<wait>",
      " kbd-chooser/method=us<wait>",
      " keyboard-configuration/layout=USA<wait>",
      " keyboard-configuration/variant=USA<wait>",
      " locale=en_US<wait>",
      " netcfg/get_domain=vm<wait>",
      " netcfg/get_hostname=ubuntu<wait>",
      " noapic<wait>",
      " nomodeset<wait>",
      " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
      " -- <wait>",
      "<enter><wait>"
    ],

    "http_directory": "http",

    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_wait_timeout": "60m",

    "disk_size": 80000,

    "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",

    "vboxmanage": [
      [ "modifyvm", "{{ .Name }}", "--memory", "1024" ],
      [ "modifyvm", "{{ .Name }}", "--cpus", "1" ]
    ]
  }],

  "provisioners": [{
    "type": "shell",
    "execute_command": "echo 'vagrant' | {{ .Vars }} sudo -S -E {{ .Path }}",
    "scripts": [
      "scripts/vbox-guest-additions.sh", 
      "scripts/admin-sudoers.sh"
    ]
  }, {
    "type": "shell",
    "scripts": [ "scripts/vagrant-pub-key.sh" ]
  }, {
    "type": "shell",
    "inline": "echo 'vagrant' | sudo -S usermod -a -G admin vagrant"
  }]
}
